import random

def number_guesser():
    # Generate a random number between 0 and 100
    secret_number = random.randint(0, 100)
    attempts = 10

    print("Welcome to the Number Guesser game!")
    print("I have picked a number between 0 and 100.")
    print(f"You have {attempts} attempts to guess it.")

    for attempt in range(1, attempts + 1):
        try:
            guess = int(input(f"Attempt {attempt}: Make a guess: "))

            if guess < 0 or guess > 100:
                print("Please enter a number between 0 and 100.")
                continue

            if guess < secret_number:
                print("Too low!")
            elif guess > secret_number:
                print("Too high!")
            else:
                print(f"Congratulations! You've guessed the number {secret_number} in {attempt} attempts!")
                return
        except ValueError:
            print("Invalid input. Please enter a valid number.")

    print(f"Unlucky, you lost! The correct number was {secret_number}.")

if __name__ == "__main__":
    number_guesser()
